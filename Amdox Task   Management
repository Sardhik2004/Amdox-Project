                <p>User ID and passkey-based secure login system.</p>
            </div>

            <div class="card" id="taskCard">
                <h3>Assign Task</h3>
                <input id="title" placeholder="Task Title">
                <select id="priority">
<option>High</option>
<option>Medium</option>
<option>Low</option>
</select>
                <input type="date" id="deadline">
                <button onclick="addTask()">Assign Task</button>
            </div>

            <div class="card">
                <h3>Tasks</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Priority</th>
                            <th>Deadline</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="taskTable"></tbody>
                </table>
            </div>

            <div class="card">
                <h3>Progress Report</h3>
                <p id="report"></p>
            </div>

        </div>
    </div>

    <script>
        let users = {}
        let currentRole = ""
        let tasks = []

        function register() {
            let u = document.getElementById("newUser").value
            let p = document.getElementById("newPass").value
            let r = document.getElementById("newRole").value
            if (!u || !p) return alert("Enter details")
            users[u] = {
                pass: p,
                role: r
            }
            alert("User Registered")
        }

        function login() {
            let u = document.getElementById("loginUser").value
            let p = document.getElementById("loginPass").value
            if (!users[u] || users[u].pass !== p) return alert("Invalid Login")
            currentRole = users[u].role
            document.getElementById("loginCard").classList.add("hidden")
            document.getElementById("mainApp").classList.remove("hidden")
            if (currentRole === "Viewer") document.getElementById("taskCard").classList.add("hidden")
            alert("Logged in as " + currentRole)
        }

        function addTask() {
            let t = {
                title: document.getElementById("title").value,
                priority: document.getElementById("priority").value,
                deadline: document.getElementById("deadline").value,
                status: "Pending"
            }
            tasks.push(t)
            render()
        }

        function updateStatus(i) {
            tasks[i].status = "Completed"
            render()
        }

        function render() {
            let table = ""
            let completed = 0
            tasks.forEach((t, i) => {
                        if (t.status === "Completed") completed++
                            table += `
<tr>
<td>${t.title}</td>
<td class="${t.priority.toLowerCase()}">${t.priority}</td>
<td>${t.deadline}</td>
<td>${t.status}</td>
<td>${currentRole!=="Viewer"&&t.status==="Pending"?`<button onclick="updateStatus(${i})">Complete</button>`:"-"}</td>
</tr>`
})
document.getElementById("taskTable").innerHTML=table
document.getElementById("report").innerText=`Completed: ${completed} | Pending: ${tasks.length-completed}`
}
    </script>

